{
  "name": "hello-npm-script",
  "version": "0.1.3",
  "description": "",
  "main": "index.js",
  "config": {
    "port": 3000
  },
  "scripts": {
    "lint:js": "eslint *.js",
    "lint:js:fix": "npm run lint:js --  --fix",
    "lint:js:s": "npm run lint:js --verbose --  --fix",
    "lint:css": "stylelint *.less",
    "lint:json": "jsonlint *.json",
    "test:serial": "npm run lint:js && npm run lint:css && npm run lint:json",
    "test:parallel": "npm run lint:js & npm run lint:css & npm run lint:json",
    "test:all": "npm-run-all lint:*",
    "test:pall": "npm-run-all --parallel lint:*",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "test": "mocha tests/",
    "watch": "npm-run-all --parallel watch:*",
    "watch:test": "npm t -- --watch",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" -- npm run lint",
    "cover": "node scripts/cover.js",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload client/",
    "client:static-server": "http-server client/",
    "prebuild": "rm -rf dist && mkdir -p dist/{images,styles,scripts}",
    "build:images": "scripty",
    "build:styles": "scripty",
    "build:scripts": "scripty",
    "build:hash": "scripty",
    "build": "scripty",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version patch && git push && git push --tags",
    "release:major": "npm version patch && git push && git push --tags",
    "bump": "scripty",
    "predeploy": "yarn && npm run build",
    "deploy": "pm2 restart pm2.json",
    "logs": "tail -f logs/*"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.less": "stylelint",
    "*.css": "stylelint",
    "*.json": "jsonlint --quiet"
  },
  "keywords": [],
  "author": "duxin <duxin@kuaishou.com>",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^3.0.0",
    "cssmin": "^0.4.3",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "express": "^4.17.1",
    "hashmark": "^5.0.0",
    "http-server": "^0.11.1",
    "husky": "^3.0.9",
    "imagemin-cli": "^5.0.0",
    "jsonlint": "^1.6.3",
    "less": "^3.10.3",
    "lint-staged": "^9.4.2",
    "livereload": "^0.8.2",
    "mocha": "^10.2.0",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^11.3.0",
    "onchange": "^6.1.0",
    "opn-cli": "^3.1.0",
    "pm2": "^4.1.2",
    "replaceinfiles": "^1.1.4",
    "scripty": "^1.9.1",
    "shelljs": "^0.8.3",
    "stylelint": "^11.1.1",
    "stylelint-scss": "^3.12.1",
    "uglify-es": "^3.3.10"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js"
    ]
  }
}
